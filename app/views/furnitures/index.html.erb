<h1>Furnitures#index</h1>

<%= link_to "Back to home page", root_path %>
<p>Find me in app/views/furnitures/index.html.erb</p>

<%= link_to "New furniture", new_furniture_path if policy(Furniture).new? %>

<h2>See all our furnitures:</h2>

<div class="row">
  <% @furnitures.each do |furniture| %>
  <div class="col-4">
    <a href="<%= furniture_path(furniture.id)%>">
      <div class="card-product">
        <img src="https://picsum.photos/id/<%= furniture.id %>/200/300" style="object-fit: cover;" />
        <div class="card-product-infos">
          <div class="card-product-infos-left">
            <h2><%=furniture.name.capitalize%></h2>
            <p class="text-dark"><%= furniture.description %></p>
          </div>
          <h2 class="card-product-pricing">Â£99.99</h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-product-user avatar-bordered" />
        </div>
      </div>
    </a>
  </div>
  <% end %>
</div>
